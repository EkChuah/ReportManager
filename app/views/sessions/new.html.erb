<div class="container">
  
  <div class="row">
    <div class="col">
      <h1 class="text-center">Login</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <p id=”alert” class="text-center"><%= alert %></p>
    </div>
  </div>
  <div class="row">
      <div class="col-4">
      </div>
      <div class="col ml-5 mt-5">
        <%= form_tag sessions_path do |form| %> 
          <div class="mt-3">
            <div class=”field”>
              <%= label_tag :email %>
              <%= text_field_tag :email %>
            </div>  
          </div>
          <div class="mt-3">
            <div class=”field”>
              <%= label_tag :password %>
              <%= password_field_tag :password %>
            </div>  
          </div>
          <div class="mt-3">
            <div class=”actions”>
              <%= submit_tag 'login' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>
