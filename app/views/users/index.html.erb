
<%= render 'layouts/menu'%>

<main role='main'>
    <div class="container-fluid position-relative" >
        <div class="row justify-content-md-center bg-light border-top">
            <div class=" mt-3 mb-3 h2">
                Utilisateurs 
            </div>
        </div>
    </div>
    
    

    <div class="container-fluid position-relative border-top mr-5 ml-5 ">
        <div class="width:200px">
            <input class=" mt-3 mb-3 col-1" type="text" placeholder="Entrez un nom" aria-label="Nom">
            <a class="btn btn-dark ml-3" href="#" role="button"> Rechercher</a>
        </div>
        <div class="row  justify-content-end mr-5 mb-3 ">
            <%= link_to 'Ajouter Utilisateur',new_user_path, {:remote => true, 'data-toggle' => "modal", 'data-target' => '#Ajout',class:"btn btn-success  mr-3"}  %>

            <div id="Ajout" class ="modal hide fade" role="dialog" >
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                            
                    </div>
                </div>
            </div>
        </div>

        
        
        
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-sm">
                <thead>
                    <tr>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Mail</th>
                        <th>Actions</th>
                        
                    </tr>
                </thead>
                <tbody id="myTable">
                    <% @users.each do |user| %>
                    <tr>
                        <td> <%= user.Prenom %></td>
                        <td> <%= user.Nom %></td>
                        <td> <%= user.email %></td>
                        <td>
                             <%= link_to 'Modifier',edit_user_path(user), {:remote => true, 'data-toggle' => "modal", 'data-target' => '#Edit',class:"btn btn-dark  mr-3"}  %>
                             <%= link_to 'Supprimer',user_path(user),method: :delete,data: {confirm: "Etes vous sûr?"},class:"btn btn-danger  mr-3"  %>
                        </td>
                    </tr>
                    <%end%>
                </tbody>
            </table>

            <div class="modal" id="Edit" >
            <div class="modal-dialog modal-dialog-centered " >
                <div class="modal-content">     
                </div>
            </div>
            </div >
        </div>       
    </div>
</main>

