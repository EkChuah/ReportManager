
       <div class="text-center mt-3"><h2>Création de Stage</h2></div>
                <%= form_for Project.new,:remote=>true do |f| %>
                <div class="d-flex-center mt-5">
                        <%= f.hidden_field :Projet ,value: @typeProjetsRespo.id%>
                        
                        <div class="d-flex mt-5">
                                <div class="form-group col-2 mt-2 ml-5 mr-5">
                                        <%= f.label :Titre, "Titre"%>
                                        <%= f.text_field :Titre, class:"form-control", placeholder: "Titre du projet"%>
                                </div>

                                <div class="form-group col-2 mt-5 ml-5 mr-5">
                                        <%= label_tag 'Confidentiel' %>
                                        <%= check_box_tag("Confidentiel",value= "1",checked = false) %>
                                </div>
                    </div>
                        
                </div>
                <div class="d-flex-center mt-5">
                        <div class="d-flex mt-5">
                                

                                <div class="form-group col-2 mt-2 ml-5 mr-5">
                                        <label>Encadrant Industriel</label>
                                        <%= collection_select(:EncadrantInd,:id, @usersI, :id, :Nom) %>
                                </div>
                                <div class="form-group col-2 mt-2 ml-5 mr-5">
                                        <label>Encadrant Académique</label>
                                        <%= collection_select(:EncadrantAca,:id, @usersA, :id, :Nom) %>
                                </div>

                                <div class="form-group col-2 mt-2 ml-5 mr-5">
                                        <label>Choix du groupe</label>
                                        <%= collection_select(:Groupe, :id, @groupes, :id, :Nom) %>
                                </div>
                        </div>
                        <div class="d-flex mt-5">
                                <div class="form-group col-2 mt-2 ml-5 mr-5">
                                        <%= f.label :DateDebut, "Date de début"%>
                                        <%= f.text_field :DateDebut, class:"form-control", placeholder: "Entrez une date"%>
                                </div>

                                <div class="form-group col-2 mt-2 ml-5 mr-5">
                                        <%= f.label :DateFin, "Date de fin"%>
                                        <%= f.text_field :DateFin, class:"form-control", placeholder: "Entrez une date"%>
                                </div>

                                <div class="form-group col-2 mt-2 ml-5 mr-5">
                                        <%= f.label :Description, "Description"%>
                                        <%= f.text_field :Description, class:"form-control", placeholder: "Description du projet"%>
                                </div>

                        </div>

                                <div class="d-flex mt-5">

                                                <div class="form-group col-2 mt-2 ml-5 mr-5">
                                                        <%= f.label :DateRenduRapport, "Date de rendu du rapport"%>
                                                        <%= f.text_field :DateRenduRapport, class:"form-control", placeholder: "Entrez une date"%>
                                                </div>
                                                
                                                <div class="form-group col-2 mt-2 ml-5 mr-5">
                                                        <%= f.label :DateEvaluation, "Date d'évaluation"%>
                                                        <%= f.text_field :DateEvaluation, class:"form-control", placeholder: "Entrez une date"%>
                                                </div>
                                                <div class="form-group col-2 mt-2 ml-5 mr-5">
                                                        <%= f.label :DateNotation, "Date de notation du rapport"%>
                                                        <%= f.text_field :DateNotation, class:"form-control", placeholder: "Entrez une date"%>
                                                </div>
                                                

                                        
                                        

                                </div>
                        </div>
                
                <div class="d-flex justify-content-between mt-5">
                        <input type="reset" class= "btn btn-primary" value="Reinitialiser" /> </form>
                        <%= f.submit "Ajouter", class: "btn btn-primary" %>
                         
                        
                </div>

              
                <%end%>

