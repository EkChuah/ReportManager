
<div class="modal-header">
    <h5 class="modal-title " >Ajout d'un groupe</h5>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body ">

    <%= form_for LiaisonGroupeEleve.new,:remote=>true do |f| %>


    <div class="form-group col-sm-15 mt-2 ml-5 mr-5">
        <label>Membre </label>
        <%= collection_select(:user, :id, @usersE, :id, :Nom) %>
    </div>
    <div class="form-group col-sm-15 mt-2 ml-5 mr-5">
        <label>Groupe </label>
        <%= collection_select(:groupe, :id, @groupes, :id, :Nom) %>
    </div>

    <div class="actions">
        <%= f.submit "Enregistrer", class: "btn btn-primary" %>
    </div>
    <%end%>
</div>
<div class="modal-footer">
   <%= link_to 'Fermer',groupes_path, class:"btn btn-primary  mr-3"  %>
    
   
</div>

               
    